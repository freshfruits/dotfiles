#exec xautolock -time 10 -locker "i3lock -i ~/images/screenshots/screenshot_2017_02_23_13_45_16.png -u -f -p win"

# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+Shift+q kill

# Dmenu show only installed apps 
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Screenshot
bindsym $MOD+Shift+p exec scrot  ~/images/screenshots/screenshot_%Y_%m_%d_%H_%M_%S.png

# change focus
#bindsym $mod+j focus left
#bindsym $mod+k focus down
